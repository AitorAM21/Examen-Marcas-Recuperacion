<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>Document</title>
    <%- include('base_header.ejs') -%> 
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div id="admin-sidebar" class="col-md-2 p-x-0 p-y-3">
                <%- include('base_menu.ejs') -%> 
            </div> <!-- /#admin-sidebar -->
            <div id="admin-main-control" class="col-md-10 p-x-3 p-y-1">
                <div class="content-title m-x-auto">
                    <i class="fa fa-dashboard"></i> Dashboard
                </div>
                <p class="display-4">
                 CATEGORIAS 
                </p>
                <div class="accordion">
                    <% for (var i = 0; i < categories.length; i++) { %>
                    <!-- Each accordion item -->
                    <a class="accordion__item" href="/categories/<%= categories[i].id%>">
                        <!-- Heading -->
                        <div class="accordion__header">
                            <!-- The toggle icon -->
                            <div class="accordion__toggle">...</div>
                
                            <!-- The title -->
                            <div class="accordion__title">
                                <td><%= categories[i].name %></td>
                            </div>
                        </div>
                
                        <!-- The content -->
                        <div class="accordion__content">
                            <td><%= categories[i].description %></td>
                        </div>
                    </a>
                
                    <!-- Repeat other item -->
                    
                </div>
                <% } %>
                
                </p>
            </div> <!-- /#admin-main-control -->
        </div> <!-- /.row -->
    </div> <!-- /.container-fluid -->


</body>
</html>
